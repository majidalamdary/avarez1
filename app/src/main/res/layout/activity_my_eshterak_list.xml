<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context="com.sputa.avarez.MyEshterakList">

    <LinearLayout
        android:id="@+id/lay_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <com.sputa.avarez.my_views.MyTextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="لیست اشتراک های من"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <com.sputa.avarez.my_views.MyTextView
            android:id="@+id/txt_not_car_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خودرویی افزوده نشده است"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a8404040"
        android:gravity="center"
        android:onClick="clk_msg"
        android:visibility="invisible">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/lay_more_detail"
            android:layout_width="320dp"
            android:layout_height="400dp"
            android:background="@drawable/btn_white"
            android:visibility="invisible">

            <com.sputa.avarez.my_views.MyTextView
                android:id="@+id/lbl_more_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="جزئیات قبض"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.04000002" />

            <LinearLayout
                android:id="@+id/lay_msg_more_detail"
                android:layout_width="304dp"
                android:layout_height="282dp"
                android:background="#445566"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.71000004">

                <com.sputa.avarez.my_views.MyTextView
                    android:id="@+id/lbl_msg_right_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:lineSpacingExtra="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <com.sputa.avarez.my_views.MyTextView
                    android:id="@+id/lbl_msg_left_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:lineSpacingExtra="5dp"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</RelativeLayout>
